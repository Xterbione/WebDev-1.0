@page
@model WebDevProject.Pages.seriebeheer

@{
    Layout = "Shared/_Layout";
}



<div class="container pt-3 pb-5">
    <div class="row">
        <div class="col">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Series Titel</th>
                    <th scope="col">Land van Oorsprong</th>             
                    <th scope="col">Eerste publicatie</th>
                    <th scope="col">Lopend</th>
                    <th scope="col">Delete</th>

                </tr>
                </thead>
                <tbody>
                @foreach (var item in @Model.Series)
                {
                    <tr>
                        <td>@item.serieTitel</td>
                        <td>@item.land_van_oorsprong</td>
                        <td>@item.eerste_publicatie</td>
                        <td>@item.lopend</td>

                        <form method="post">
                            <input type="hidden" name="hiddenUitgever" value="@item.serieTitel"/>
                            <td><button asp-page-handler="delete" class="btn btn-danger">Delete</button></td>
                        </form>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        
        <div class="col">
            <form method="post" class="d-inline mt-10" asp-page-handler="add">
                <h1>Serie toevoegen</h1>
                <input type="text" asp-for="serie" placeholder="Enter a Serie" required="required"/>
                <button type="submit" name="add" class="btn btn-primary">Add Serie</button>
            </form>
